# Alert System Configuration Example
# Copy this file to .env and configure your notification channels

# Database Configuration
DATABASE_URL=sqlite:///ai_tools.db

# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_FROM_EMAIL=ai-tools-monitor@yourcompany.com
ALERT_TO_EMAILS=admin@yourcompany.com,team@yourcompany.com

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#ai-tools-alerts
SLACK_USERNAME=AI Tools Monitor

# Generic Webhook Notifications
WEBHOOK_URLS=https://your-webhook-endpoint.com/alerts,https://another-endpoint.com/alerts
WEBHOOK_HEADERS={"Authorization": "Bearer your-token", "Content-Type": "application/json"}

# Alert System Settings
ALERT_DEBOUNCE_MINUTES=5
ALERT_BATCH_THRESHOLD=3
ENABLE_REAL_TIME_ALERTS=true
ENABLE_BATCH_ALERTS=true

# Testing Configuration
TEST_EMAIL=test@yourcompany.com
TEST_SLACK_WEBHOOK=https://hooks.slack.com/services/TEST/WEBHOOK
RUN_INTEGRATION_TESTS=false